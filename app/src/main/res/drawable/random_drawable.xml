<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="rectangle"
          >
            <solid android:color="@color/navy_blue"/>
            <size
                android:height="20dp"
                android:width="20dp"/>
        </shape>
    </item>
    <item android:right="20dp">
        <shape android:shape="rectangle"
          >
            <solid android:color="@color/yellow"/>
            <size
                android:height="20dp"
                android:width="20dp"/>
        </shape>
    </item>

    <item android:top="20dp"
        >
        <shape android:shape="rectangle">
            <solid android:color="@color/green"/>
            <size
                android:height="20dp"
                android:width="20dp"/>
        </shape>
    </item>

    <item android:top="20dp"
        android:left="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/red"/>
            <size
                android:height="20dp"
                android:width="20dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <stroke android:color="@color/currentBorder"
                           android:width="1dp" />
        </shape>
    </item>
</layer-list>